<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jojo.flippy.app.SplashScreenActivity"
    android:background="@drawable/splash_bg">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewFlippyLogoWhite"
        android:layout_gravity="center|top"
        android:src="@drawable/flippy_logo_white"
        android:contentDescription="@string/app_name"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/splash_screen_tag_line"
        android:id="@+id/textViewSplashScreenTagLine"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textColor="#ffffff"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/splash_screen_url"
        android:id="@+id/textViewSplashScreenURL"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:textColor="#ffffff"
        android:textStyle="italic" />
</FrameLayout>
