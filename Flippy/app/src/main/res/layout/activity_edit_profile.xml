<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0EEEE"
    tools:context="com.jojo.flippy.profile.EditProfileActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_five">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageViewMemberEdit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one_fifty"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        app:border_color="@color/border"
                        app:border_width="3dip"
                        app:corner_radius="0dp"
                        app:oval="false" />

                    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageViewUploadPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="@dimen/margin_ten"
                        android:background="@color/flippy_dark_header"
                        android:padding="@dimen/margin_ten"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_action_save"
                        app:border_color="@color/border"
                        app:border_width="1dp"
                        app:corner_radius="0dp"
                        app:oval="false" />

                    <ProgressBar
                        android:id="@+id/progressBarUpdateAvatar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                </FrameLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_two"
                    android:background="@color/flippy_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_ten"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textViewEditProfileFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten"
                            android:text="@string/edit_profile_first_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/flippy_orange" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_margin="@dimen/margin_two"
                            android:background="@color/flippy_orange" />

                        <EditText
                            android:id="@+id/editTextEditProfileFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/dummy_user_name"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/flippy_dark_header" />

                        <TextView
                            android:id="@+id/textViewEditProfileLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten"
                            android:text="@string/edit_profile_last_name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/flippy_orange" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_margin="@dimen/margin_two"
                            android:background="@color/flippy_orange" />

                        <EditText
                            android:id="@+id/editTextEditProfileLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/dummy_user_name"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/flippy_dark_header" />

                        <TextView
                            android:id="@+id/textViewMemberEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten"
                            android:text="@string/edit_profile_email"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/flippy_orange" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_margin="@dimen/margin_two"
                            android:background="@color/flippy_orange" />

                        <EditText
                            android:id="@+id/editTextEditProfileEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/dummy_user_email"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="@color/flippy_dark_header" />

                        <TextView
                            android:id="@+id/textViewDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten"
                            android:text="@string/edit_profile_date"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/flippy_orange" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_margin="@dimen/margin_two"
                            android:background="@color/flippy_orange" />

                        <EditText
                            android:id="@+id/editTextEditProfileDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/edit_profile_date"
                            android:inputType="date"
                            android:singleLine="true"
                            android:textColor="@color/flippy_dark_header" />

                        <TextView
                            android:id="@+id/textViewGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_ten"
                            android:text="@string/edit_profile_date"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/flippy_orange" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_margin="@dimen/margin_two"
                            android:background="@color/flippy_orange" />

                        <Spinner
                            android:id="@+id/genderSpinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawSelectorOnTop="true"
                            android:entries="@array/gender_array"
                            android:popupBackground="@color/flippy_orange" />

                        <TextView
                            android:id="@+id/textViewEditProfileMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/margin_ten"
                            android:gravity="center_horizontal"
                            android:text="@string/edit_profile_message"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/flippy_orange" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
