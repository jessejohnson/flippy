<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0EEEE"
    tools:context="com.jojo.flippy.profile.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <com.makeramen.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageViewMemberEdit"
                    android:layout_width="@dimen/margin_two_hundred"
                    android:layout_height="@dimen/margin_two_hundred"
                    android:layout_alignParentTop="true"
                    android:padding="10dip"
                    android:scaleType="center"
                    app:border_color="@color/border"
                    app:border_width="3dip"
                    app:corner_radius="10dip"
                    app:oval="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_two"
                android:background="@color/flippy_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_ten"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textViewEditProfileFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:text="@string/edit_profile_first_name"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/margin_two"
                        android:background="@color/flippy_orange" />

                    <EditText
                        android:id="@+id/editTextEditProfileFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dummy_user_number"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/flippy_dark_header" />

                    <TextView
                        android:id="@+id/textViewEditProfileLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:text="@string/edit_profile_last_name"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/margin_two"
                        android:background="@color/flippy_orange" />

                    <EditText
                        android:id="@+id/editTextEditProfileLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dummy_user_number"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/flippy_dark_header" />

                    <TextView
                        android:id="@+id/textViewMemberNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:text="@string/edit_profile_number"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/margin_two"
                        android:background="@color/flippy_orange" />

                    <EditText
                        android:id="@+id/editTextEditProfileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dummy_user_number"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textColor="@color/flippy_dark_header" />

                    <TextView
                        android:id="@+id/textViewMemberEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:text="@string/edit_profile_email"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/margin_two"
                        android:background="@color/flippy_orange" />

                    <EditText
                        android:id="@+id/editTextEditProfileEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dummy_user_email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/flippy_dark_header" />

                    <TextView
                        android:id="@+id/textViewDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:text="@string/edit_profile_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/margin_two"
                        android:background="@color/flippy_orange" />

                    <EditText
                        android:id="@+id/editTextEditProfileDateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/edit_profile_date"
                        android:inputType="date"
                        android:singleLine="true"
                        android:textColor="@color/flippy_dark_header" />

                    <TextView
                        android:id="@+id/textViewGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:text="@string/edit_profile_date"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_margin="@dimen/margin_two"
                        android:background="@color/flippy_orange" />

                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/gender_array"
                        android:popupBackground="@color/flippy_orange" />

                    <TextView
                        android:id="@+id/textViewEditProfileMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/margin_ten"
                        android:gravity="center_horizontal"
                        android:text="@string/edit_profile_message"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_orange" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
