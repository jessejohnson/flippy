<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutWidget"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_five"
    android:background="@drawable/widget_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/margin_fifty"
            android:layout_margin="@dimen/margin_five"
            android:background="@drawable/ic_launcher"
            android:layout_weight="0.4"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/margin_hundred"
            android:id="@+id/imageViewWidgetNotice" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_five"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/flippy_dark_header"
                android:shadowRadius="1"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/flippy_white"
                android:id="@+id/textViewWidgetNoticeTitle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowColor="@color/flippy_dark_header"
                android:shadowRadius="1"
                android:ellipsize="marquee"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textStyle="normal"
                android:textColor="@color/flippy_white"
                android:id="@+id/textViewWidgetNoticeBody" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>