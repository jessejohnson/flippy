<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_ten"
    android:paddingRight="0dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:padding="@dimen/margin_five">

            <ImageView
                android:id="@+id/imageViewSettingsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:padding="@dimen/margin_five">

            <TextView
                android:id="@+id/textViewSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/margin_two"
                android:gravity="left"
                android:text="@string/settings_title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/flippy_dark_header" />

            <TextView
                android:id="@+id/textViewSettingsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_subtitle"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/flippy_dark_header"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>