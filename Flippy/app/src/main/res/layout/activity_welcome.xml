<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jojo.flippy.app.WelcomeActivity"
    android:background="@drawable/splash_bg">

    <TextView
        android:text="@string/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewWelcome"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:gravity="center" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/buttonSigninWithTwitter"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signin_with_twitter"
        android:id="@+id/buttonSigninWithTwitter"
        android:layout_above="@+id/buttonSigninWithEmail"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:padding="@dimen/margin_ten"
        android:gravity="center"
        android:background="@drawable/flippy_button_twitter"
        android:textColor="@color/flippy_white"
        android:drawableLeft="@drawable/twitter_logo_white"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signin_with_email"
        android:id="@+id/buttonSigninWithEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/textViewUserRight"
        android:gravity="center"
        android:padding="@dimen/margin_ten"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:background="@drawable/flippy_button_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/register_terms"
        android:id="@+id/textViewUserRight"
        android:textColor="@color/flippy_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
