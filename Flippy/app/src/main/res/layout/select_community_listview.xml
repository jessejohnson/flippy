<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_five"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_one_fifty">

        <ImageView
            android:id="@+id/imageViewCommunity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_one_fifty"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="@dimen/margin_ten">

            <TextView
                android:id="@+id/textViewCommunityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:paddingBottom="@dimen/margin_five"
                android:shadowColor="@color/flippy_dark_header"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/flippy_white"
                android:textSize="30sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewCommunityBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:paddingBottom="@dimen/margin_five"
                android:shadowColor="@color/flippy_dark_header"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/flippy_white" />

            <TextView
                android:id="@+id/textViewCommunityId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:shadowColor="@color/flippy_dark_header"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/flippy_white"
                android:visibility="gone" />
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>