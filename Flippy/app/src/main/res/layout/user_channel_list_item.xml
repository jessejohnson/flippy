<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/flippy_light_header"
    android:orientation="horizontal"
    android:padding="2dip">

    <ImageView
        android:id="@+id/imageViewChannel"
        android:layout_width="95dip"
        android:layout_height="95dip"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="@dimen/margin_five"
        android:orientation="vertical">

        <!-- Channel name -->
        <TextView
            android:id="@+id/textViewChannelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="@string/default_channel_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/flippy_white"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Channel members -->
        <TextView
            android:id="@+id/textViewNumberOfMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewChannelName"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/flippy_white" />

        <!-- channel status -->
        <TextView
            android:id="@+id/textViewMemberStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewNumberOfMembers"
            android:layout_alignStart="@+id/textViewNumberOfMembers"
            android:layout_below="@+id/textViewNumberOfMembers"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_marginLeft="@dimen/margin_five"
            android:gravity="right"
            android:text="@string/default_channel_status"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/flippy_white"
             />
    </LinearLayout>
</RelativeLayout>