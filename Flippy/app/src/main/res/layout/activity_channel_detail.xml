<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flippy_white"
    tools:context="com.jojo.flippy.core.ChannelDetailActivity">

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progressLoadChannel"
        style="?android:attr/android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:background="@null"
        android:indeterminate="true"
        android:padding="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_five"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewChannelLarge"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_one_fifty"
                        android:scaleType="centerCrop" />

                </FrameLayout>


                <TextView
                    android:id="@+id/textViewChannelNameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margin_two"
                    android:paddingTop="@dimen/margin_two"
                    android:shadowColor="@color/flippy_white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/default_channel_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/flippy_orange" />

                <TabHost
                    android:id="@+id/tabHost"
                    android:layout_marginTop="@dimen/margin_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#C5C6E1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#C5C6E1"
                        android:orientation="vertical">

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/flippy_white"></TabWidget>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/flippy_white">

                            <RelativeLayout
                                android:id="@+id/tab1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/margin_five"
                                android:paddingBottom="0dp"
                                android:background="@color/flippy_white">

                                <TextView
                                    android:id="@+id/textViewChannelBio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:gravity="left"
                                    android:paddingBottom="@dimen/margin_five"
                                    android:paddingLeft="@dimen/margin_five"
                                    android:paddingRight="@dimen/margin_five"
                                    android:paddingTop="@dimen/margin_five"
                                    android:text="@string/channel_detail_bio"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/flippy_dark_header" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_below="@+id/textViewChannelBio"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal">


                                    <com.makeramen.RoundedImageView
                                        android:id="@+id/imageViewCreator"
                                        android:layout_width="@dimen/margin_hundred"
                                        android:layout_height="@dimen/margin_hundred"
                                        android:padding="@dimen/margin_five"
                                        android:scaleType="centerInside"
                                        app:border_color="@color/border"
                                        app:border_width="2dp"
                                        app:corner_radius="@dimen/margin_hundred"
                                        app:oval="false" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_horizontal"
                                        android:orientation="vertical"
                                        android:paddingLeft="@dimen/margin_five">

                                        <TextView
                                            android:id="@+id/textViewChannelCreatorEmail"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:gravity="left"
                                            android:paddingLeft="@dimen/margin_five"
                                            android:paddingTop="@dimen/margin_five"
                                            android:text="@string/flippy_email"
                                            android:textAppearance="?android:attr/textAppearanceSmall" />

                                        <TextView
                                            android:id="@+id/textViewNameChannelDetailFullName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left|bottom"
                                            android:gravity="left"
                                            android:paddingLeft="@dimen/margin_five"
                                            android:paddingRight="@dimen/margin_five"
                                            android:shadowColor="@color/flippy_white"
                                            android:shadowDx="1"
                                            android:shadowDy="1"
                                            android:shadowRadius="2"
                                            android:text="@string/channel_detail_members"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:textColor="@color/flippy_dark_header" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayoutSubscriptions"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/margin_one"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/buttonSubscribeToChannel"
                                        style="?android:attr/buttonStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/flippy_button_default_plain"
                                        android:text="@string/subscription_state_true"
                                        android:textStyle="bold"
                                        android:textColor="@color/flippy_orange" />

                                    <Button
                                        android:id="@+id/buttonUnSubscribeToChannel"
                                        style="?android:attr/buttonStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/flippy_button_default_plain"
                                        android:text="@string/subscription_state_false"
                                        android:textStyle="bold"
                                        android:textColor="@color/flippy_orange" />

                                </LinearLayout>


                                <Button
                                    android:id="@+id/buttonManageToChannel"
                                    android:layout_alignParentBottom="true"
                                    style="?android:attr/buttonStyleSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/margin_two"
                                    android:background="@drawable/flippy_button_default_plain"
                                    android:text="@string/manage_channel"
                                    android:textColor="@color/flippy_orange"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/tab2"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/margin_five"
                                android:paddingBottom="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textViewNameSomePost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:padding="@dimen/margin_five"
                                    android:shadowColor="@color/flippy_white"
                                    android:shadowDx="1"
                                    android:background="@color/flippy_orange"
                                    android:shadowDy="1"
                                    android:text="@string/channel_detail_some_posts"
                                    android:textStyle="bold"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/flippy_white" />

                                <ListView
                                    android:id="@+id/listViewChannelPost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scrollbars="none"
                                    android:layout_below="@+id/textViewNameSomePost"
                                    android:layout_marginBottom="@dimen/margin_five"
                                    android:divider="@color/flippy_orange"
                                    android:dividerHeight="@dimen/margin_one"
                                    android:listSelector="@android:color/transparent" />
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>

                </TabHost>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
