<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jojo.flippy.core.NoticeDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_fifty"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_five">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/flippy_dark_header"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_five">

                    <TextView
                        android:id="@+id/textViewNoticeTitleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_title"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/flippy_white" />

                    <TextView
                        android:id="@+id/textViewNoticeSubtitleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_subtitle"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_white"
                        android:textStyle="normal" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewNoticeImageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_one_fifty"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/textViewLikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:drawable/screen_background_dark_transparent"
                    android:gravity="right"
                    android:padding="@dimen/margin_five"
                    android:shadowColor="@color/flippy_white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/dummy_flippy_likes"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/flippy_white" />

            </FrameLayout>

            <TextView
                android:id="@+id/textViewNoticeSubtitleChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_five"
                android:text="@string/notice_subtitle"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/flippy_orange"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textViewNoticeTextDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageViewNoticeImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/imageViewNoticeImage"
                android:layout_below="@+id/imageViewNoticeImage"
                android:fontFamily="san-serif-light"
                android:lineSpacingMultiplier="1"
                android:textIsSelectable="true"
                android:gravity="left"
                android:padding="@dimen/margin_five"
                android:text="@string/dummy_user_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/flippy_dark_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_one"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginRight="@dimen/margin_five"
                android:background="@color/flippy_orange" />


            <LinearLayout
                android:id="@+id/linearLayoutUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_ten"
                android:orientation="horizontal">

                <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageViewNoticeCreatorImage"
                    android:layout_width="@dimen/margin_hundred"
                    android:layout_height="@dimen/margin_hundred"
                    android:layout_alignParentTop="true"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    app:border_color="@color/border_white"
                    app:border_width="2dp"
                    app:corner_radius="100dp"
                    app:oval="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_five">

                    <TextView
                        android:id="@+id/textViewAuthorEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/dummy_user_email"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/textViewNoticeTimeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/dummy_user_email"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textViewNoticeLocation"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/margin_five"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text="@string/dummy_user_email"
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <LinearLayout
                android:id="@+id/linearLayoutMapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/linearLayoutNoticeShowLocation"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/flippy_orange"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/margin_five"
        android:weightSum="3">

        <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewRemovePost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_marginRight="@dimen/margin_five"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_remove"
            app:border_color="@color/border_white"
            app:border_width="2dp"
            app:corner_radius="100dp"
            app:oval="false" />

        <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewDeletePost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_marginRight="@dimen/margin_five"
            android:padding="5dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_discard"
            app:border_color="@color/border_white"
            app:border_width="2dp"
            app:corner_radius="100dp"
            app:oval="false" />




        <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewStarDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_five"
            android:layout_marginRight="@dimen/margin_five"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_important"
            app:border_color="@color/border_white"
            app:border_width="2dp"
            app:corner_radius="100dp"
            app:oval="false" />

    </LinearLayout>
</RelativeLayout>
