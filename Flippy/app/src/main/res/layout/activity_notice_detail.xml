<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jojo.flippy.core.NoticeDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/flippy_dark_header"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewNoticeTitleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_title"
                        android:textAppearance="?android:attr/textAppearanceSmallInverse"
                        android:textColor="@color/flippy_white" />

                    <TextView
                        android:id="@+id/textViewNoticeSubtitleChannelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_subtitle"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_white"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textViewNoticeSubtitleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_subtitle"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_white"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.20">

                    <com.makeramen.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageViewStarDetail"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="1dp"
                        android:layout_marginRight="@dimen/margin_five"
                        android:scaleType="fitCenter"
                        android:src="@drawable/trans_star_white"
                        app:border_color="@color/border"
                        app:border_width="@dimen/margin_two"
                        app:corner_radius="@dimen/margin_fifty"
                        app:oval="false" />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewNoticeImageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_one_fifty"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout"
                    android:scaleType="centerCrop" />


                <TextView
                    android:id="@+id/textViewLikes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@android:drawable/screen_background_dark_transparent"
                    android:gravity="right"
                    android:padding="@dimen/margin_five"
                    android:shadowColor="@color/flippy_white"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="@string/dummy_flippy_likes"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/flippy_white" />

            </FrameLayout>


            <TextView
                android:id="@+id/textViewNoticeTextDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageViewNoticeImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/imageViewNoticeImage"
                android:layout_below="@+id/imageViewNoticeImage"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/dummy_user_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/flippy_dark_header" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_one"
                android:layout_marginLeft="@dimen/margin_five"
                android:layout_marginRight="@dimen/margin_five"
                android:background="@color/flippy_orange" />


            <LinearLayout
                android:id="@+id/linearLayoutUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_ten"
                android:orientation="horizontal">

                <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageViewNoticeCreatorImage"
                    android:layout_width="@dimen/margin_hundred"
                    android:layout_height="@dimen/margin_hundred"
                    android:layout_alignParentTop="true"
                    android:padding="1dp"
                    android:scaleType="center"
                    app:border_color="@color/border_white"
                    app:border_width="2dp"
                    app:corner_radius="100dp"
                    app:oval="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_five">

                    <TextView
                        android:id="@+id/textViewAuthorEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/dummy_user_email"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/textViewNoticeTimeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/dummy_user_email"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/textViewNoticeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/dummy_user_email"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutMapView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin_five">


                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/linearLayoutNoticeShowLocation"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonPublishNotice"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/flippy_button_default"
        android:text="@string/notice_detail_publish"
        android:textColor="@color/flippy_white"
        android:visibility="gone" />
</RelativeLayout>
