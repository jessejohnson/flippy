<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_two"
    tools:context="com.jojo.flippy.core.NoticeDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:background="@color/flippy_dark_header"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textViewNoticeTitleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_title"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/flippy_white" />

                    <TextView
                        android:id="@+id/textViewNoticeSubtitleDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_subtitle"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/flippy_white"
                        android:textStyle="italic" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewStarDetail"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trans_star_white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewNoticeImageDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_user" />

            <TextView
                android:id="@+id/textViewNoticeTextDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageViewNoticeImage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/imageViewNoticeImage"
                android:layout_below="@+id/imageViewNoticeImage"
                android:background="@color/flippy_light_header"
                android:padding="10dp"
                android:text="@string/dummy_user_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/flippy_white" />
        </LinearLayout>
    </ScrollView>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/flippy_button_default"
        android:textColor="@color/flippy_white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notice_detail_publish"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonPublishNotice" />
</RelativeLayout>
