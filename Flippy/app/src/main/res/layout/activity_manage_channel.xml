<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    tools:context="com.jojo.flippy.profile.ManageChannelActivity">


    <ListView
        android:id="@+id/listViewChannelAdmins"
        android:layout_margin="@dimen/margin_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:dividerHeight="@dimen/margin_half"
        android:paddingBottom="@dimen/margin_fifty"
        android:divider="@color/flippy_light_header"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <Button
        android:id="@+id/buttonAddAdminChannel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_five"
        android:layout_marginLeft="@dimen/margin_ten"
        android:layout_marginRight="@dimen/margin_ten"
        android:background="@drawable/flippy_button_default_plain"
        android:text="@string/manage_channel_add_admin"
        android:textColor="@color/flippy_orange" />

    <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
        android:id="@+id/progressBarLoadAdmin"
        android:layout_width="@dimen/margin_fifty"
        android:layout_height="@dimen/margin_fifty"
        android:layout_below="@+id/linearLayoutChannelName"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_eighty"
        gpb:colors="@array/flippy_rainbow"
        gpb:type="folding_circles" />

</RelativeLayout>
