<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >
    <shape
        android:shape="oval"
        android:useLevel="true" >
        <stroke
            android:color="@color/flippy_orange"
            android:width="@dimen/margin_one"
            />
        <size
            android:height="48dip"
            android:width="48dip" />
        <gradient
            android:centerColor="@color/flippy_orange"
            android:centerY="0.50"
            android:endColor="@color/flippy_white"
            android:startColor="@color/flippy_white"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>