<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <gradient android:startColor="@color/flippy_dark_header" android:endColor="@color/flippy_dark_header" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <gradient android:startColor="@color/flippy_light_header" android:endColor="@color/flippy_light_header" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <gradient android:startColor="@color/flippy_light_header" android:endColor="@color/flippy_light_header" />
        </shape>
    </item>
</selector>